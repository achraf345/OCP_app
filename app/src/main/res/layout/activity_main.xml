<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundgreen">

    <ImageView
        android:id="@+id/ocp_image"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/th"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/escpaceuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/escpace_user"
        android:layout_below="@id/ocp_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:id="@+id/LL"
        android:layout_below="@+id/ocp_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:elevation="20sp"
        android:paddingBottom="6dp"
        android:backgroundTint="#EFEDED"
        android:background="@drawable/ronder_corner">



        <EditText
            android:id="@+id/Umatricule"
            android:autofillHints=""
            android:textColorHint="#898686"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:shadowColor="@color/black"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:maxLength="7"
            android:hint="@string/rcar_matricule"
            android:background="@drawable/ronder_corner"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="20sp"
            android:shadowRadius="@integer/material_motion_duration_medium_1"/>

        <EditText
            android:id="@+id/Upassword"
            android:textColorHint="#898686"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:shadowColor="@color/black"
            android:padding="15dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textStyle="normal"
            android:background="@drawable/ronder_corner"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:shadowRadius="@integer/material_motion_duration_medium_1"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/Uresetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/reset_password"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorLink="@color/white" />

        <Button
            android:id="@+id/Ulogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:elevation="30dp"
            android:layout_marginBottom="20dp"
            android:text="@string/login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#57D131"
            android:textColor="@color/white"
            android:textColorHint="@color/green"
            android:textColorLink="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/Uactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="#57D131"
        android:layout_marginLeft="60dp"
        android:elevation="40dp"
        android:text="@string/active_your_account"
        android:textSize="22sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/Uecspaceadministrateur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/escpace_administrateurad"
        android:layout_below="@id/Uactive"
        android:textSize="20sp"
        android:background="@drawable/ronder_corner2"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:textColor="@color/green_2d"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/UescpaceApprovissionement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/escpace_approvisionementap"
        android:layout_below="@id/Uecspaceadministrateur"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/ronder_corner2"
        android:backgroundTint="@color/white"
        android:textColor="@color/green_2d"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="10dp"/>



</RelativeLayout>