<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocpbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/livraison_phase"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:letterSpacing="0.05"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ronder_corner"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/Confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tconfirm"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="40dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>


            <TextView
                android:id="@+id/Ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:hint="ID_Ticket"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:layout_marginRight="15dp"
                android:padding="4dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/Typechangeordemand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:hint="ProductType"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:layout_marginEnd="15dp"
                android:padding="4dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Tagent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:hint="Type Agent"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:textSize="20sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            tools:ignore="MissingClass"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>